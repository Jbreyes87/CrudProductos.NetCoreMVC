
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .td {
        width: 200px;
    }
</style>
<div class="d-flex mb-2">
    <div class="p-2 ">
        <h3>
            Lista de Articulos
        </h3>
    </div>

    <div class="ml-auto p-2 ">
        <a class="btn btn-primary" asp-action="Create"><i class='bx bxs-plus-square'></i>&nbsp Nuevo Articulo</a>
    </div>
</div>



<div class="card">
    <div class="card-body">
        <table id="tblArticulos" class="table table-striped table-bordered table-sm " style="width:100%">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Fecha</th>
                    <th>Categoria</th>
                    <th>Imagen</th>
                    <th>Operaciones</th>
                </tr>
            </thead>

        </table>
    </div>
</div>


@section scripts {
    <script src="~/LogicaJS/Articulos.js"></script>
 
}
